<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notifications</title>
    <!-- Link Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
    .main-content {
      margin-left: 173px;
      height: 100%;
      background-size: cover;
      background-attachment: fixed;
      padding: 20px;
      width: 100%;
    }
   
    </style>
</head>
<body> 
  <div class="d-flex position-relative">

  <%- include('../views/hader.ejs') %>
  <div class="main-content">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Danh sách Thông Báo</h1>

        <!-- Kiểm tra nếu không có thông báo -->
        <% if (notifications.length === 0) { %>
            <div class="alert alert-info text-center">Không có thông báo nào.</div>
        <% } else { %>
            <!-- Hiển thị bảng thông báo -->
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Nội dung</th>
                        <th>Thời gian tạo</th>
                    </tr>
                </thead>
                <tbody>
                    <% notifications.forEach((notification, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= notification.message %></td>
                            <td><%= notification.createdAt %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>

        <!-- Nút quay lại -->
      
    </div>
  </div>
</div>

    <!-- Link Bootstrap JS (Optional for interactive components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
