<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sách Đơn Hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container my-5">
        <h1 class="text-center mb-4">Danh Sách Đơn Hàng</h1>
        <table class="table table-bordered table-striped text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID Đơn Hàng</th>
                    <th>Khách Hàng</th>
                    <th>Số Điện Thoại</th>
                    <th>Thú Cưng</th>
                    <th>Loại Thú Cưng</th>
                    <th>Dịch Vụ</th>
                    <th>Giá Dịch Vụ</th>
                    <th>Thời Gian Đặt Lịch</th>
                    <th>Trạng Thái</th>
                </tr>
            </thead>
            <tbody>
                <% if (orders && orders.length > 0) { %>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order.id %></td>
                            <td><%= order.tenKhachHang || 'Không xác định' %></td>
                            <td><%= order.sdtNguoiDung || 'Không xác định' %></td>
                            <td><%= order.tenThuCung || 'Không xác định' %></td>
                            <td><%= order.loaiThuCung || 'Không xác định' %></td>
                            <td><%= order.tenDichVu || 'Không xác định' %></td>
                            <td><%= order.giaDichVu || 'Không xác định' %></td>
                            <td>
                                <% if (order.thoiGianDatLich) { %>
                                    <%= order.thoiGianDatLich.toLocaleString('vi-VN') %>
                                <% } else { %>
                                    Không xác định
                                <% } %>
                            </td>
                            <td><%= order.trangThai || 'Không xác định' %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="9" class="text-center">Không có đơn hàng</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <a href="/nguoidung" class="btn btn-secondary">Quay Lại</a>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
