<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chi tiết sản phẩm</title>
  <!-- Thêm Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Chi tiết sản phẩm</h1>

    <form action="/produc>" method="POST">
      <div >
        <label for="tensp" class="form-label">Tên sản phẩm</label>
        <p><%= product.tensp %></p>
      </div>

      <div class="mb-3">
        <label for="giatien" class="form-label">Giá tiền</label>
        <p><%= product.giatien %></p>
      </div>

      <div class="mb-3">
        <label for="loaisp" class="form-label">Loại sản phẩm</label>
        <% loaiProducts.forEach(loai => { %>
        <p><%= loai.tenloai %></p>
        
        <% }); %>
       
      </div>

      <div class="mb-3">
        <label for="mota" class="form-label">Mô tả</label>
        <p><%= product.mota %></p>
      </div>

      <div class="mb-3">
        <label for="hansudung" class="form-label">Hạn sử dụng</label>
        <p><%= product.hansudung %></p>
      </div>

      <div class="mb-3">
        <label for="soluong" class="form-label">Số lượng</label>   
             <p><%= product.soluong %></p>

      </div>

      <div class="mb-3">
        <label for="trongluong" class="form-label">Trọng lượng (kg)</label>        <p><%= product.trongluong %></p>

      </div>

      <div class="mb-3">
        <label for="hinhanh" class="form-label">Hình ảnh (URL)</label>
        <img src="<%= product.hinhanh %>"  class="img-fluid text-center" style="max-width: 120px;" alt="<%= product.tense %>">
      </div>

      <div class="mb-3">
        <label for="type" class="form-label">Loại (type): <p><%= product.type %></p></label>
                 
      </div>

      <a href="/product" class="btn btn-secondary">Quay lại</a>
    </form>
  </div>

  <!-- Thêm Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
