<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sửa sản phẩm</title>
  <!-- Thêm Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Sửa sản phẩm</h1>

    <form action="/product/update/<%= product.id %>" method="POST">
      <div class="mb-3">
        <label for="tensp" class="form-label">Tên sản phẩm</label>
        <input type="text" class="form-control" id="tensp" name="tensp" value="<%= product.tensp %>" required>
      </div>

      <div class="mb-3">
        <label for="giatien" class="form-label">Giá tiền</label>
        <input type="number" class="form-control" id="giatien" name="giatien" value="<%= product.giatien %>" required>
      </div>

      <div class="mb-3">
        <label for="loaisp" class="form-label">Loại sản phẩm</label>
        <!-- Dropdown menu lấy dữ liệu từ LoaiProduct -->
        <select class="form-select" id="loaisp" name="loaisp" required>
          <option value="" disabled selected>Chọn loại sản phẩm</option>
          <% loaiProducts.forEach(loai => { %>
            <option value="<%= loai.id %>" <%= loai.id === product.loaisp ? "selected" : "" %>><%= loai.tenloai %></option>
          <% }); %>
        </select>
      </div>

      <div class="mb-3">
        <label for="mota" class="form-label">Mô tả</label>
        <textarea class="form-control" id="mota" name="mota" rows="3" required><%= product.mota %></textarea>
      </div>

      <div class="mb-3">
        <label for="hansudung" class="form-label">Hạn sử dụng</label>
        <input type="date" class="form-control" id="hansudung" name="hansudung" value="<%= product.hansudung %>" required>
      </div>

      <div class="mb-3">
        <label for="soluong" class="form-label">Số lượng</label>
        <input type="number" class="form-control" id="soluong" name="soluong" value="<%= product.soluong %>" required>
      </div>

      <div class="mb-3">
        <label for="trongluong" class="form-label">Trọng lượng (kg)</label>
        <input type="number" class="form-control" id="trongluong" name="trongluong" value="<%= product.trongluong %>" required>
      </div>

      <div class="mb-3">
        <label for="hinhanh" class="form-label">Hình ảnh (URL)</label>
        <input type="text" class="form-control" id="hinhanh" name="hinhanh" value="<%= product.hinhanh %>" required>
      </div>

      <div class="mb-3">
        <label for="type" class="form-label">Loại (type)</label>
        <input type="number" class="form-control" id="type" name="type" value="<%= product.type %>" required>
      </div>

      <button type="submit" class="btn btn-success">Cập nhật sản phẩm</button>
      <a href="/product" class="btn btn-secondary">Quay lại</a>
    </form>
  </div>

  <!-- Thêm Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
