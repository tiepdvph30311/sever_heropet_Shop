<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh sách Hóa Đơn</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
        .main-content {
      margin-left: 173px;
      background-color: #EEEEEE;
      height: 100%;
      background-size: cover;
      background-attachment: fixed;
      padding: 20px;
      width: 100%;
    }
 
  </style>
</head>

<body>



  <div class="d-flex position-relative">
    <%- include('../views/hader.ejs') %>
    <div class="main-content"><div class="container mt-5">
      <h1 class="text-center mb-4">Danh sách Hóa Đơn</h1>
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Họ Tên</th>
              <th>Địa chỉ</th>
              <th>SDT</th>
              <th>Phương Thức</th>
              <th>Tổng Tiền</th>
              <th>Trạng Thái</th>
              <th>Hành động</th>
            </tr>
          </thead>
          <tbody>
            <% if (HoaDon.length> 0) { %>
              <% HoaDon.forEach(HoaDons=> { %>
                <tr>
                  <td>
                    <%= HoaDons.hoten %>
                  </td>
                  <td>
                    <%= HoaDons.diachi %>
                  </td>
                  <td>
                    <%= HoaDons.sdt %>
                  </td>
                  <td>
                    <%= HoaDons.phuongthuc %>
                  </td>
                  <td>
                    <%= HoaDons.tongtien %>
                  </td>
                  <td>
                    <% if(HoaDons.trangthai==1){ %>
                      <p style="color: orange;">Đang xử lý</p>
                    <% } %>
                    <% if(HoaDons.trangthai==2){ %>
                          <p style="color: orange;">Đang giao hàng</p>
                    <% } %>
                    <% if(HoaDons.trangthai==3){ %>
                              <p style="color: rgb(0, 255, 26);">Giao hàng thành công</p>
                    <% } %>
                    <% if(HoaDons.trangthai==4){ %>
                                  <p style="color: red;">Hủy hàng</p>
                    <% } %>
  
                  </td>
                  <td>
                        <!-- Button sua -->
                 
                  
  
                  <a href="/HoaDon/editHoaDon/<%= HoaDons.id %>" class="btn btn-outline-primary">Chi tiết hóa đơn</a>
              
                  </td>
                </tr>
                <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="7" class="text-center">Không có hóa đơn nào hiện có.</td>
                    </tr>
                    <% } %>
          </tbody>
        </table>
      </div>
      <nav aria-label="Page navigation example" class="mt-4">
        <ul class="pagination justify-content-center">
          <!-- Nút Trang Trước -->
          <% if (currentPage > 1) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= currentPage - 1 %>">&laquo; Trang Trước</a>
            </li>
          <% } %>
      
          <!-- Hiển thị từng trang -->
          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
      
          <!-- Nút Trang Tiếp -->
          <% if (currentPage < totalPages) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= currentPage + 1 %>">Trang Tiếp &raquo;</a>
            </li>
          <% } %>
        </ul>
      </nav>
    </div>
    </div>
  </div>




  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>