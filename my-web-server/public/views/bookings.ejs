<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh sách Booking</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Custom styles */
    body {
      background-color: #f4f6f9;
      font-family: 'Arial', sans-serif;
    }

    .container {
      margin-top: 30px;
    }

    h1 {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 30px;
      text-align: center;
    }


  </style>
</head>
<body>



  <div class="d-flex position-relative">
    <%- include('../views/hader.ejs') %>
    <div>
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Cân Nặng</th>
              <th>ID User</th>
              <th>Loại Thú Cưng</th>
              <th>Tên Dịch Vụ</th>
              <th>Tên Thú Cưng</th>
              <th>Thời Gian Đặt Lịch</th>
              <th>Trạng Thái</th>
              <th>Hành Động</th>
            </tr>
          </thead>
          <tbody>
            <% if (bookings.length > 0) { %>
              <% bookings.forEach(booking => { %>
                <tr>
                  <td><%= booking.canNang %></td>
                  <td><%= booking.iduser %></td>
                  <td><%= booking.loaiThuCung %></td>
                  <td><%= booking.tenDichVu %></td>
                  <td><%= booking.tenThuCung %></td>
                  <td><%= booking.thoiGianDatLich.toDate().toLocaleString() %></td>
                  <td><%= booking.trangThai %></td>
                  <td>
                    <!-- Sửa booking -->
                    <a href="/bookings/editBooking/<%= booking.idcthdbooking %>" class="btn btn-success btn-sm">Sửa</a>
                    <!-- Xóa booking -->
                    <a href="/bookings/deleteBooking/<%= booking.idcthdbooking %>" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa booking này?')">Xóa</a>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr><td colspan="8" class="text-center text-muted">Không có booking nào.</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>








  

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
