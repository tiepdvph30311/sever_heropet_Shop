<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh sách Booking</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Custom styles */
    body {
      background-color: #f4f6f9;
      font-family: 'Arial', sans-serif;
    }

    .main-content {
      margin-left: 210px;
    }

    h1 {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 30px;
      text-align: center;
    }

    .pagination .page-link {
      color: #007bff;
    }

    .pagination .page-item.active .page-link {
      background-color: #007bff;
      border-color: #007bff;
      color: #fff;
    }
  </style>
</head>
<body>

  <div class="d-flex position-relative">
    <!-- Include Header -->
    <%- include('../views/hader.ejs') %>

    <div class="main-content container">
      <h1>Danh sách Booking</h1>

      <!-- Table Hiển Thị Booking -->
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Cân Nặng</th>
              <th>ID User</th>
              <th>Loại Thú Cưng</th>
              <th>Tên Dịch Vụ</th>
              <th>Tên Thú Cưng</th>
              <th>Thời Gian Đặt Lịch</th>
              <th>Trạng Thái</th>
              <th>Hành Động</th>
            </tr>
          </thead>
          <tbody>
            <% if (bookings.length > 0) { %>
              <% bookings.forEach(booking => { %>
                <tr>
                  <td><%= booking.canNang %></td>
                  <td><%= booking.iduser %></td>
                  <td><%= booking.loaiThuCung %></td>
                  <td><%= booking.tenDichVu %></td>
                  <td><%= booking.tenThuCung %></td>
                  <td><%= booking.thoiGianDatLich.toDate().toLocaleString() %></td>
                  <td><%= booking.trangThai %></td>
                  <td>
                    <% if (booking.trangThai !== 'Đã huỷ') { %>
                      <a href="/bookings/editBooking/<%= booking.idcthdbooking %>" class="btn btn-success btn-sm">Sửa</a>
                    <% } else { %>
                      <span class="text-muted">Không thể sửa (Đã huỷ)</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="8" class="text-center text-muted">Không có booking nào.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Phân Trang -->
     
      
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
