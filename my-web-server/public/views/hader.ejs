  <title>Danh sách sản phẩm</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f8f9fa;
      /* Màu nền body */
    }

    #side_nav {
      background: #555555;
      /* Màu nền sidebar */
      position: fixed;
      left: 0;
      top: 0;
      height: 100%;
    }



    .sidebar li.active {
      background: #eee;
      border-radius: 8px;
    }

    .sidebar li.active a,
    .sidebar li.active a:hover {
      color: #000;
    }

    .sidebar li a {
      color: #fff;
    }

    .sidebar li a:hover {
      color: red;
      /* Màu chữ khi hover */
    }


    .info {
      color: #fff;
    }




    .dropdown-menu {
      width: 250px;
    }

    /* Reset CSS */
    body,
    ul,
    li,
    a {
      margin: 0;
      padding: 0;
      list-style: none;
      text-decoration: none;
    }

    /* Global Styles */
    ul {
      padding: 0;
      margin: 0;
    }

    /* Navigation Styles */
    ul.list-unstyled {
      padding-left: 20px;
    }

    ul.list-unstyled li {
      margin-bottom: 10px;
    }

    ul.list-unstyled a {
      display: block;
      padding: 10px;
      color: white;
      border-radius: 30px 0px 0px 30px;
      transition: background-color 0.3s ease;
    }

    ul.list-unstyled a:hover {
      background-color: #eee;
    }

    ul.list-unstyled i {
      margin-right: 10px;
    }

    /* Horizontal Line */


    /* Additional Styles for Notification and Logout */
    ul.list-unstyled:last-child {
      margin-top: 20px;
    }


    /* Áp dụng cho cả hai biểu tượng trong thẻ a */
    ul.list-unstyled a i.material-symbols-outlined {
      vertical-align: middle;
      /* Điều chỉnh khoảng cách giữa biểu tượng và văn bản */
    }
  </style>
</head>

