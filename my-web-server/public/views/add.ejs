<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thêm sản phẩm mới</title>
  <!-- Thêm Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Thêm sản phẩm mới</h1>

    <form action="/product/add" method="POST">
      <div class="row g-3">
        <!-- Các input form -->
        <div class="col-md-6">
          <label for="tensp" class="form-label">Tên sản phẩm</label>
          <input type="text" class="form-control" id="tensp" name="tensp" placeholder="Nhập tên sản phẩm" required>
        </div>
        <div class="col-md-6">
          <label for="giatien" class="form-label">Giá tiền</label>
          <input type="number" class="form-control" id="giatien" name="giatien" placeholder="Nhập giá tiền" required>
        </div>
        <div class="col-md-6">
          <label for="loaisp" class="form-label">Loại sản phẩm</label>
          <!-- Dropdown menu lấy dữ liệu từ LoaiProduct -->
          <select class="form-select" id="loaisp" name="loaisp" required>
            <option value="" disabled selected>Chọn loại sản phẩm</option>
            <% loaiProducts.forEach(loai => { %>
              <option value="<%= loai.tenloai %>"><%= loai.tenloai %></option>
            <% }); %>
          </select>
        </div>
        <div class="col-md-6">
          <label for="hansudung" class="form-label">Hạn sử dụng</label>
          <input type="date" class="form-control" id="hansudung" name="hansudung" required>
        </div>
        <div class="col-md-6">
          <label for="soluong" class="form-label">Số lượng</label>
          <input type="number" class="form-control" id="soluong" name="soluong" placeholder="Nhập số lượng" required>
        </div>
        <div class="col-md-6">
          <label for="trongluong" class="form-label">Trọng lượng (kg)</label>
          <input type="text" class="form-control" id="trongluong" name="trongluong" placeholder="Nhập trọng lượng" required>
        </div>
        <div class="col-md-6">
          <label for="type" class="form-label">Loại (type)</label>
          <input type="number" class="form-control" id="type" name="type" placeholder="Nhập loại sản phẩm (type)" required>
        </div>
        <div class="col-md-12">
          <label for="mota" class="form-label">Mô tả</label>
          <textarea class="form-control" id="mota" name="mota" rows="3" placeholder="Nhập mô tả sản phẩm" required></textarea>
        </div>
        <div class="col-md-12">
          <label for="hinhanh" class="form-label">Hình ảnh (URL)</label>
          <input type="text" class="form-control" id="hinhanh" name="hinhanh" placeholder="Nhập URL hình ảnh" required>
        </div>
      </div>
      <div class="mt-3">
        <button type="submit" class="btn btn-success">Thêm sản phẩm</button>
        <a href="/" class="btn btn-secondary">Quay lại</a>
      </div>
    </form>
  </div>

  <!-- Thêm Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
