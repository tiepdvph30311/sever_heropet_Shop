<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thống Kê Doanh Thu</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .main-content {
      margin-left: 173px;
      background-color: #EEEEEE;
      height: 100%;
      background-size: cover;
      background-attachment: fixed;
      padding: 20px;
      width: 100%;
    }
 
  </style>
</head>

<body>

  <div class="d-flex position-relative">

    <%- include('../views/hader.ejs') %>
      <div class="main-content">
        <div class="container mt-5">
          <h1 class="text-center ">Thống kê doanh thu</h1>


          <form action="/doanhthusp" method="GET" class="mb-4">
            <div class="row">
              <div class="col">
                <input type="date" name="startDate" class="form-control" value="<%= startDate %>" required>
              </div>
              <div class="col">
                <input type="date" name="endDate" class="form-control" value="<%= endDate %>" required>
              </div>
              <div class="col">
                <button type="submit" class="btn btn-outline-primary">Lọc</button>
              </div>
            </div>
          </form>


          <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th>Tên khách hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền đơn hàng</th>
                <th>ACTION</th>
              </tr>
            </thead>
            <tbody>
              <% if (HoaDon.length> 0) { %>
                <% HoaDon.forEach(service=> { %>
                  <tr>
                    <td>
                      <%= service.hoten %>
                    </td>
                    <td>
                      <%= service.ngaydat %>
                    </td>
                    <td>
                      <%= service.tongtien %>
                    </td>
                    <td>
                      <!-- Button sua -->



                      <a href="/doanhthusp/chitietdoanhthu/<%= service.id %>" class="btn btn-outline-primary">Chi tiết hóa
                        đơn</a>

                    </td>
                  </tr>
                  <% }) %>

                    <% } else { %>
                      <tr>
                        <td colspan="3" class="text-center text-muted">Không có dữ liệu trong khoảng thời gian này.</td>
                      </tr>
                      <% } %>


                      <tr>
                        <td colspan="4" class="table-active text-center">
                          <h5>
                            Tổng tiền: <%= totalAmount.toLocaleString('vi-VN') %> VND
                          </h5>
                        </td>
                      </tr>
                      
                      

            </tbody>
          </table>


        </div>
      </div>
  </div>
  </div>

  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>