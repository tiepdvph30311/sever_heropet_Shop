<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thống Kê Doanh Thu Theo Tháng</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>


    .main-content {
        margin-left: 210px;
        width: 80%;
    }
</style>
</head>
<body>
    <div class="d-flex position-relative">
        <%- include('../views/hader.ejs') %>
  <div class="main-content mt-5">
    <h1 class="text-center">Thống Kê Doanh Thu Theo Tháng - Năm <%= selectedYear %></h1>

    <!-- Chọn năm -->
    <form action="/revenue/monthly" method="GET" class="mb-4">
      <div class="row">
        <div class="col-auto">
          <label for="year" class="form-label">Chọn Năm:</label>
        </div>
        <div class="col-auto">
          <select name="year" id="year" class="form-select">
            <% for (let i = 2020; i <= new Date().getFullYear(); i++) { %>
              <option value="<%= i %>" <%= i === selectedYear ? 'selected' : '' %>><%= i %></option>
            <% } %>
          </select>
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary">Xem</button>
        </div>
      </div>
    </form>

    <!-- Biểu đồ -->
    <canvas id="monthlyChart" width="400" height="200"></canvas>
  </div>
</div>
  <script>
    const ctx = document.getElementById('monthlyChart').getContext('2d');
    const monthlyData = <%- JSON.stringify(monthlyData) %>;

    const labels = [
      "Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6",
      "Tháng 7", "Tháng 8", "Tháng 9", "Tháng 10", "Tháng 11", "Tháng 12"
    ];
    const totalOrders = monthlyData.map(data => data.totalOrders);
    const totalRevenue = monthlyData.map(data => data.totalRevenue);

    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: labels,
        datasets: [
          {
            label: 'Số Lượng Đơn',
            data: totalOrders,
            backgroundColor: 'rgba(54, 162, 235, 0.5)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
          },
          {
            label: 'Doanh Thu (VND)',
            data: totalRevenue,
            backgroundColor: 'rgba(75, 192, 192, 0.5)',
            borderColor: 'rgba(75, 192, 192, 1)',
            borderWidth: 1
          }
        ]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'top',
          },
          tooltip: {
            callbacks: {
              label: (context) => {
                if (context.dataset.label === 'Doanh Thu (VND)') {
                  return `${context.dataset.label}: ${context.raw.toLocaleString('vi-VN')} VND`;
                }
                return `${context.dataset.label}: ${context.raw}`;
              }
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  </script>
</body>
</html>
