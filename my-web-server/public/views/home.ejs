<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh sách sản phẩm</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .main-content {
      margin-left: 205px;
      width: 80%;
    }

    .mySlides {
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      transition: opacity 0.5s, transform 0.5s;
    }

    .fade.active {
      opacity: 1;
      transform: translateX(0);
    }

    .slide-right.active {
      transform: translateX(-100%);
    }
  </style>
</head>

<body onload="star()">


  <div class="d-flex position-relative">
    <%- include('../views/hader.ejs') %>
      <div class="main-content">

        <div>
          <img src="../images/banner1.jpg" style="background-attachment: fixed; " width="1250px" height="700px" id="anh1" 
            alt="">
        </div>
        
      </div>
  </div>

  <script>
        
    let magAnh= ["../images/banner1.jpg","../images/img1.jpg"]
    let vitri=0
    let nodeAnh=document.getElementById("anh1")
    function lui(){
        vitri--
        if(vitri<0){
            vitri=4
        }
        
        nodeAnh.src=magAnh[vitri]
    }
    function tien(){
        vitri++
        if(vitri>4){
            vitri=0
        }
        nodeAnh.src=magAnh[vitri]
    }
    let dungAnh
    function star(){
        let dem=1
        dungAnh= setInterval (()=>{
            vitri=dem%magAnh.length
            nodeAnh.src=magAnh[vitri]
            dem++
        },1500)
    }
    function stop(){
        clearInterval(dungAnh)
    }

</script>


</body>

</html>